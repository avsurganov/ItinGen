<div style='width: 100%; height: 100%'>
  <div id="map-btn-container" class="container">
    <div id="map" style='width: 100%; height: 100%; right: 0;' class="map-pos"></div>
    <div class="rate rate-btn-container">
      <%= link_to '', root_path, class: "btn btn-sm rate-btn btn-link", id: "like", :method => :get %>
      <%= link_to '', root_path, class: "btn btn-sm rate-btn btn-link", id: "dislike", :method => :get %>
    </div>
  </div>
</div>

<!-- Sidebar header -->
<div class="w3-sidebar w3-bar-block w3-card w3-animate-left sidebar-panel" style="display:block; width: 20%;" id="mySidebar">
  <button class="btn-sidebar-left w3-bar-item w3-button w3-large ">Create Account </button>
  <button class="btn-sidebar-left w3-bar-item w3-button w3-large ">Log in/out </button>
  <button class="btn-sidebar-right w3-bar-item w3-button w3-large">Close &times;</button>

  <!-- End sidebar header -->

  <!-- sidebar body cards -> these need to be dynamically generated with Ruby-->
  <% @locs.each_with_index do |loc, i| %>
    <div class="card" style="width: 100%;">
      <div class="card-header">
        <h3 class="card-title"><%= ((i + 10).to_s 36).capitalize %></h3>
      </div>
      <div class="card-body">
        <h5 class="card-title"><%= loc.venue_name %></h5>
        <p class="card-text"><%= loc.address1 %></p>
        <p class="card-text"><%= loc.address2 %></p>
        <p class="card-text"><%= loc.address3 %></p>
        <p class="card-text"><%= loc.city %>, <%= loc.state %>. <%= loc.zip_code %></p>
        <p class="card-text"><%= loc.state %></p>
        <!-- link below could also be part of dynamically generate-->
        <a href="https://www.uchicago.edu/" class="btn btn-primary">[See Venue]</a>
      </div>
    </div>
  <% end %>
  <!--sidebar body-->
</div>

