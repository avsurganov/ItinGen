<!DOCTYPE html>
<html>
  <head>
    <title>ItinGen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <script src="//maps.google.com/maps/api/js?key=AIzaSyBJhC_VA8gqutJ_6EI28GaAbMBbXVFeWqw"></script>
    <script src="//cdn.rawgit.com/mahnunchik/markerclustererplus/master/dist/markerclusterer.min.js"></script>
    <script src='//cdn.rawgit.com/printercu/google-maps-utility-library-v3-read-only/master/infobox/src/infobox_packed.js' type='text/javascript'></script>
    <script src='//underscorejs.org/underscore-min.js' type='text/javascript'></script>
  </head>

  <body>
    <%= yield %>
  </body>
  <script type="text/javascript">
    let directionsDisplay = new google.maps.DirectionsRenderer();
    let directionsService = new google.maps.DirectionsService();

    function calcRoute() {
      let origin      = new google.maps.LatLng(<%= @pts[0][:lat] %>, <%= @pts[0][:lng] %>);
      let destination = new google.maps.LatLng(<%= @pts[1][:lat] %>, <%= @pts[1][:lng] %>);
      let events = [];
      let event;
      <% @locs.each do |loc| %>
        event = new google.maps.LatLng(<%= loc[:lat] %>, <%= loc[:lng] %>);
        events.push({location: event, stopover: true});
      <% end %>
      let request = {
        origin:      origin,
        destination: destination,
        waypoints: events,
        travelMode:  google.maps.TravelMode.DRIVING
      };
      directionsService.route(request, function(response, status) {
        if (status == google.maps.DirectionsStatus.OK) {
          directionsDisplay.setDirections(response);
        }
      });
    }

    calcRoute();

    var handler = Gmaps.build('Google');
    handler.buildMap({ internal: {id: 'map'}}, function(){
      directionsDisplay.setMap(handler.getMap());
    });
  </script>
</html>